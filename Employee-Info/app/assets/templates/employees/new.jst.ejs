<h2>Add an Employee</h2>
<div class="form-group">
  <label>Birthdate</labe>
  <input
    type="date"
    name="employee[birth_date]"
    class="form-control">
</div>
<div class="form-group">
  <label>First Name</labe>
  <input
    type="text"
    name="employee[first_name]"
    class="form-control">
</div>
<div class="form-group">
  <label>Last Name</labe>
  <input
    type="text"
    name="employee[last_name]"
    class="form-control">
</div>
<div class="radio">
  <label>
    <input type="radio" name="employee[gender]" id="male" value="M" checked>
    Male
  </label>
</div>
<div class="radio">
  <label>
    <input type="radio" name="employee[gender]" id="female" value="F" checked>
    Female
  </label>
</div>
<div class="form-group">
  <label>Hire Date</labe>
  <input
    type="date"
    name="employee[hire_date]"
    class="form-control">
</div>
