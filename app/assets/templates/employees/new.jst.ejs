<div class="m-background"></div>
<div class="m-content">
<button class="close">&times;</button>
  <form class="new-employee">
    <h2>Add an Employee</h2>
    <div class="form-group">
      <% if (errors.length === 1) { %>
        <label>Please fix the following errror before resubmitting the form:</label>
      <% } else if (errors.length > 1) { %>
        <label>Please fix the following errrors before resubmitting the form:</label>
      <% } %>
      <ul class="errors">
        <% errors.forEach( function(error) {%>
          <li><%= error %></li>
        <%})%>
      </ul>
    </div>

    <div class="form-group">
      <label>Birthdate:</label>
      <input
        type="date"
        name="employee[birth_date]"
        class="form-control">
    </div>
    <div class="form-group">
      <label>First Name:</label>
      <input
        type="text"
        name="employee[first_name]"
        class="form-control">
    </div>
    <div class="form-group">
      <label>Last Name:</label>
      <input
        type="text"
        name="employee[last_name]"
        class="form-control">
    </div>
    <div class="form-group">
      <strong>Gender:</strong>
      <div class="radio">
        <label>
          <input type="radio" name="employee[gender]" id="male" value="M">
          Male
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="employee[gender]" id="female" value="F">
          Female
        </label>
      </div>
    </div>
    <div class="form-group">
      <label>Hire Date:</label>
      <input
        type="date"
        name="employee[hire_date]"
        class="form-control">
    </div>
    <button type="submit" class="btn btn-success btn-default">
      Submit
    </button>
  </form>
</div>
